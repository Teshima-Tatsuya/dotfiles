[core]
	editor = vim
	excludesfile = /Users/tatsuya/.gitignore_global
[color]
	ui = auto
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[push]
	default = current
[alias]
	aa = add -A
	co = checkout
	cm = commit -m
	st = status
	ac = !git aa && git cm
[include]
	path = ~/.gitconfig.local
[commit]
	template = /Users/user/.stCommitMsg
[ghq]
    root=~/src
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
